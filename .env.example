# OASIS Configuration Example
# Copy this file to .env and modify as needed

# Environment
ENVIRONMENT=development  # Options: development, staging, production
DEBUG=true

# Logging
LOGGING__LEVEL=INFO
LOGGING__FILE_PATH=./logs/oasis.log  # Default log file path

# Proxy
PROXY__HOST=127.0.0.1
PROXY__PORT=8080

# Database
DATABASE__URL=sqlite:///oasis.db  # Default SQLite database
DATABASE__ECHO=false

# Redis
REDIS__HOST=localhost
REDIS__PORT=6379
REDIS__DB=0

# Security
SECURITY__SECRET_KEY=your-secret-key-here
SECURITY__SESSION_TIMEOUT=3600

# Performance
PERFORMANCE__MAX_CONCURRENT_CONNECTIONS=1000
PERFORMANCE__REQUEST_TIMEOUT=30
PERFORMANCE__MAX_REQUEST_SIZE=100000000

# Vault
VAULT__BASE_PATH=./oasis_vault  # Default vault storage path
VAULT__AUTO_SAVE=true
VAULT__BACKUP_ENABLED=true
VAULT__BACKUP_INTERVAL=3600
VAULT__MAX_BACKUPS=10